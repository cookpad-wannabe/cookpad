<div class="columns is-mobile">
  <div class="column is-three-fifths is-offset-one-fifth">
    <div class="card">
      <div class="card-content">
        <h2 class="title is-2"><i class="fas fa-sign-in-alt"></i> Login</h2>
        <%- include ("./partials/messages") %>
        <form action="/users/login" method="POST">
          <div class="field">
            <label class="label">Email</label>
            <div class="control">
              <input
                class="input"
                type="email"
                id="email"
                name="email"
                placeholder="Enter Email"
                value="<%= typeof email != 'undefined' ? email : '' %>"
              />
            </div>
          </div>

          <div class="field">
            <label class="label">Password</label>
            <div class="control">
              <input
                class="input"
                type="password"
                id="password"
                name="password"
                placeholder="Your Password"
                value="<%= typeof password != 'undefined' ? password : '' %>"
              />
            </div>
          </div>

          <div class="field">
            <div class="control">
              <button type="submit" class="button is-link">
                Login
              </button>
            </div>
          </div>

          <div class="field">
            <div class="content">
              <p>Not Registered Yet? <a href="/users/register">Register</a></p>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
